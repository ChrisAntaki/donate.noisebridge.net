<div class="row">
  <div class="col-md-8 col-md-offset-2 donation-header">
    <%= image_tag('noisebridge_logo.jpg', class: 'center noisebridge_logo') %>
    <h3>Noisebridge: a hacker spaceship needs your help!</h3>
  </div>

  <div class="col-md-6 col-md-offset-3 donation-progress">
    <%= render "progress_bar" %>
  </div>

  <div class="col-md-6 col-md-offset-3">
    <div class="alert alert-success" role="alert">
      Hey there stranger! <%= link_to "Did you know that you can also donate to Noisebridge on a recurring basis?", recurring_path %>
    </div>
  </div>

  <div class="col-md-4 col-md-offset-2 donation-form">
    <%= render "charge_form" %>
  </div>

  <div class="col-md-4 donation-form">
    <%= render "leaderboard" %>
  </div>
</div>
