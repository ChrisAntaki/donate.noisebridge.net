<!DOCTYPE html>
<html>
<head>
  <title>Noisebridge - <%= @title || "Donate" %></title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>

  <%= favicon_link_tag %>

  <%= csrf_meta_tags %>
  <script type="text/javascript" src="https://js.stripe.com/v2/"></script>

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <%= nonced_javascript_tag do %>
    Stripe.setPublishableKey("<%= Rails.application.secrets.stripe_api_key %>");
  <% end %>
</head>
<body>

  <div class="container">
    <%= yield %>
  </div>

  <div class="container footer">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <p><%= github_link %> is released under the terms of the <%= license_link %></p>
        <p class="meta">running: <%= current_version_link %></p>
      </div>
    </div>
  </div>

</body>
</html>

